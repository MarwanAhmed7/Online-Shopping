<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateProduct"
    android:background="@drawable/shop2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="378dp"
        android:layout_height="52dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        android:background="@color/white"
        android:fontFamily="serif"
        android:text="      Update Product"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/currntdtt"
        android:layout_width="243dp"
        android:layout_height="59dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="99dp"
        android:background="#D5CFCF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/delvdatt"
        android:layout_width="255dp"
        android:layout_height="65dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="110dp"
        android:background="#D5CFCF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currntdtt" />

    <EditText
        android:id="@+id/usnaame"
        android:layout_width="255dp"
        android:layout_height="65dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="110dp"
        android:background="#D5CFCF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delvdatt" />

    <Button
        android:id="@+id/upload"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="129dp"
        android:backgroundTint="@color/white"
        android:text="DONE"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usnaame" />
</androidx.constraintlayout.widget.ConstraintLayout>